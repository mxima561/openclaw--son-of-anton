{
    "gateway": {
        "mode": "local",
        "bind": "loopback",
        "trustedProxies": ["0.0.0.0/0"],
        "controlUi": {
            "allowInsecureAuth": true
        }
    },
    "browser": {
        "enabled": true,
        "headless": true
    },
    "plugins": {
        "enabled": true,
        "entries": {
            "whatsapp": {
                "enabled": true
            },
            "telegram": {
                "enabled": true
            },
            "signal": {
                "enabled": true
            },
            "discord": {
                "enabled": true
            }
        }
    },
    "models": {
        "mode": "merge",
        "providers": {
            "gradient": {
                "baseUrl": "https://inference.do-ai.run/v1",
                "apiKey": "${GRADIENT_API_KEY}",
                "api": "openai-completions",
                "models": [
                    {
                        "id": "llama3.3-70b-instruct",
                        "name": "Llama 3.3 70B Instruct",
                        "reasoning": false,
                        "input": ["text"],
                        "contextWindow": 128000,
                        "maxTokens": 8192
                    },
                    {
                        "id": "deepseek-r1-distill-llama-70b",
                        "name": "DeepSeek R1 Distill Llama 70B",
                        "reasoning": true,
                        "input": ["text"],
                        "contextWindow": 128000,
                        "maxTokens": 8192
                    },
                    {
                        "id": "openai-gpt-oss-120b",
                        "name": "OpenAI GPT OSS 120B",
                        "reasoning": false,
                        "input": ["text"],
                        "contextWindow": 128000,
                        "maxTokens": 8192
                    }
                ]
            },
            "bedrock": {
                "baseUrl": "http://127.0.0.1:4001/v1",
                "apiKey": "sk-fake",
                "api": "openai-completions",
                "models": [
                    {
                        "id": "claude-opus-4-5",
                        "name": "Claude Opus 4.5",
                        "reasoning": true,
                        "input": ["text", "image"],
                        "contextWindow": 200000,
                        "maxTokens": 8192
                    },
                    {
                        "id": "claude-opus-4-6",
                        "name": "Claude Opus 4.6",
                        "reasoning": true,
                        "input": ["text", "image"],
                        "contextWindow": 200000,
                        "maxTokens": 8192
                    }
                ]
            }
        }
    },
    "tools": {
        "web": {
            "search": {
                "provider": "brave",
                "apiKey": "${BRAVE_SEARCH_API_KEY}"
            }
        }
    },
    "agents": {
        "defaults": {
            "model": {
                "primary": "bedrock/claude-opus-4-5"
            }
        }
    }
}